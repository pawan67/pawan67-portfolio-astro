          link="https://drive.google.com/file/d/103kJni5O2U4EIlPjpLbirpoKrxJozPv8/view?usp=sharing"
          title="Resume"
        />
      </div>
      <div class="grid grid-cols-2 gap-8">
        <ResumeCard link="mailto:pawantamada8@gmail.com" title="Contact" />
        <AstroLogoCard />
      </div>
    </div>
  </div>
</Layout>


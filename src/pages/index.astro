---
import { Card, CardContent } from "@/components/ui/card";
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import { Switch } from "@/components/ui/switch";
import { ArrowBigDown, MenuIcon, MoveUpRight } from "lucide-react";
import CustomCard from "@/components/shared/custom-card";
import ProfileBento from "@/components/bento-cards/profile";
import SpotifyBentoCard from "@/components/bento-cards/spotify";
import SocialBentoCard from "@/components/bento-cards/socials";
import TechBentoCard from "@/components/bento-cards/tech";
import MediaBentoCard from "@/components/bento-cards/arch";
import ProjectBentoCard from "@/components/bento-cards/project";
import ContactBentoCard from "@/components/bento-cards/contact";
import PreviousPortfoliioCard from "@/components/bento-cards/previousPortfolio";
import ResumeCard from "@/components/bento-cards/resume";
import AstroLogoCard from "@/components/bento-cards/astro-logo";
---

<Layout title="Pawan Tamada - Fullstack Developer">
  <div class="grid gap-8 items-stretch lg:grid-cols-2">
    <ProfileBento client:only />

    <div class="grid grid-cols-2 gap-8">
      <SocialBentoCard client:only />
      <SpotifyBentoCard client:only />
    </div>
  </div>
  <div class="grid gap-8 lg:grid-cols-2 mt-8">
    <MediaBentoCard client:only />
    <TechBentoCard client:only />
  </div>
  <div class="grid gap-8 lg:grid-cols-2 mt-8">
    <div class="flex flex-col gap-8">
      <ProjectBentoCard
        client:only
        title="Threads Clone"
        description="Meta's new app clone using Next.js 13, Supabase Postgres, shadcn UI, NextAuth.js and prisma."
        liveLink="https://threads-meta.vercel.app/"
        githubLink="https://github.com/pawan67/threads-clone"
      />
      <ProjectBentoCard
        client:only
        title="Buzznote - A Notion Clone"
        description="The Connected workspace for your notes, tasks, wikis, and databases. created using Next js 13, Convex, Tailwind CSS"
        liveLink="https://buzznote.vercel.app/"
        githubLink="https://github.com/pawan67/buzznote"
      />
      <ProjectBentoCard
        client:only
        title="Fredit - A Reddit Clone"
        description="A fullstack reddit clone created with Next JS 13, Typescript, Prisma, Next Auth, Tailwind CSS. "
        liveLink="https://fredit.vercel.app/"
        githubLink="https://github.com/pawan67/fredit"
      />
    </div>

    <div class="grid gap-8 aspect-square">
      <div class="grid grid-cols-2 gap-8">
        <PreviousPortfoliioCard client:only />
        <ResumeCard
          client:only
          link="https://drive.google.com/file/d/103kJni5O2U4EIlPjpLbirpoKrxJozPv8/view?usp=sharing"
          title="Resume"
        />
      </div>
      <div class="grid grid-cols-2 gap-8">
        <ResumeCard
          client:only
          link="mailto:pawantamada8@gmail.com"
          title="Contact"
        />
        <AstroLogoCard client:only />
      </div>
    </div>
  </div>
</Layout>

